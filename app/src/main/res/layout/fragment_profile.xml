<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/colorPrimaryGreen">


    <ImageView
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:src="@drawable/exit"

            android:layout_marginRight="10dp" android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>


    <ImageView
            android:id="@+id/Logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/gas_station"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    <TextView
            android:text="Mon profil"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="70dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title"
            android:background="@color/colorPrimary"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/colorPrimary">


        <Button
            android:id="@+id/reservationCar"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Mes réservations de véhicules"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
    />

    <Button
            android:id="@+id/reservationStation"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Mes réservations de bornes"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/reservationCar"
    />

    <Button
            android:id="@+id/vehicule"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Mes Véhicules"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/reservationStation"
    />

    <Button
            android:id="@+id/preferences"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Mes préférences"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/vehicule"
            android:layout_marginTop="10dp"
    />

    <Button
            android:id="@+id/informations"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:text="Mes informations"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/preferences"
    />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>