<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              app:cardBackgroundColor="@color/colorTransparent"
               android:layout_margin="20dp"
>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
                android:id="@+id/dateDebut"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textSize="11dp"
                android:gravity="center"
                android:text="Début : "/>

        <TextView
            android:id="@+id/date_start"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="11dp"
            android:text="12/01/2019 23:12"/>

        <TextView
                android:id="@+id/dateFin"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textSize="11dp"
                android:gravity="center"
                android:text="Fin : "/>

        <TextView
                android:id="@+id/date_end"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="11dp"
                android:text="12/01/2019 23:12"
        />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="30dp">
                <TextView
                        android:id="@+id/voitureTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textSize="11dp"
                        android:text="Véhicule : "
                        android:layout_marginHorizontal="10dp"/>
                <TextView
                        android:id="@+id/vehicule"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="marque + modele + immatriculation"
                        android:layout_marginHorizontal="10dp"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="10dp" android:orientation="horizontal" android:background="@color/colorPrimary"></LinearLayout>

</android.support.v7.widget.CardView>